	<ThingDef ParentName="Bed">
		<defName>GW_IF_MedicaeBed</defName>
		<label>medicae bed</label>
		<description>Medicae bed</description>
		<designationCategory>GW_IF_Furniture</designationCategory>
		<researchPrerequisites>
			<li>GW_IF_CommonStuff</li>
		</researchPrerequisites>
		<defaultPlacingRot>South</defaultPlacingRot>
		<graphicData>
			<texPath>Furniture/Bed/Medicae/Bed_Medical</texPath>
		</graphicData>
		<statBases>
			<MaxHitPoints>150</MaxHitPoints>
			<WorkToBuild>2800</WorkToBuild>
			<Mass>35</Mass>
			<Flammability>1.0</Flammability>
			<BedRestEffectiveness>1</BedRestEffectiveness>
			<Comfort>0.80</Comfort>
			<ImmunityGainSpeedFactor>1.221</ImmunityGainSpeedFactor>
			<MedicalTendQualityOffset>0.20</MedicalTendQualityOffset>
			<SurgerySuccessChanceFactor>1.21</SurgerySuccessChanceFactor>
			<BirthRitualQualityOffset MayRequire="Ludeon.RimWorld.Biotech">5.5</BirthRitualQualityOffset>
		</statBases>
	</ThingDef>

