	<ThingDef ParentName="GW40k_StatuesBase">
		<defName>GW40k_Statues_1x1Janitor</defName>
		<label>Janitor statue</label>
		<description>A small sculpture on a pedestal, depicting a humble Imperial janitor. \n\nHis struggle is of necessity, for dirt and grime breeds the plagues of Nurgle - but he doesn't know that. He will collapse and die before he discovers any meaning in his work.</description>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Furniture/Statues/1x1 Simple/Statue1x1_JanitorGuy</texPath>
			<drawSize>(1,1.5)</drawSize>
			<drawOffset>(0,0,0.35)</drawOffset>
		</graphicData>
		<size>(1,1)</size>
		<!-- <designationCategory>GW_IF_Furniture</designationCategory> -->
		<fillPercent>0.25</fillPercent>
		<castEdgeShadows>false</castEdgeShadows>
		<rotatable>false</rotatable>
		<statBases>
			<MaxHitPoints>90</MaxHitPoints>
			<Mass>2</Mass>
			<Beauty>50</Beauty>
			<WorkToMake>18000</WorkToMake>
		</statBases>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
			<li>Stony</li>
		</stuffCategories>
		<recipeMaker>
			<researchPrerequisite>
				<!-- <li></li> -->
			</researchPrerequisite>
		</recipeMaker>
		<costStuffCount>50</costStuffCount>
	</ThingDef>
	
