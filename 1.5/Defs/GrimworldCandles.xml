<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef Name="GW_IF_CandleBase" ParentName="BuildingBase" Abstract="True">
        <graphicData>
            <graphicClass>Graphic_Multi</graphicClass>
            <drawSize>(2, 2)</drawSize>
