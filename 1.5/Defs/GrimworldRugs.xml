<Defs>
    <ThingDef Abstract="True" Name="GW_IF_RugBase" ParentName="BuildingBase">
        <stuffCategories>
            <li>Fabric</li>
        </stuffCategories>      
        <altitudeLayer>FloorCoverings</altitudeLayer>
        <wipesPlants>true</wipesPlants>
        <minifiedDef>MinifiedThing</minifiedDef>
        <thingCategories>
            <li>BuildingsFurniture</li>
        </thingCategories>
        <statBases>
            <Flammability>0.32</Flammability>
        </statBases>
        <designationCategory>GW_IF_Furniture</designationCategory>
        <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
        <selectable>true</selectable>
        <useHitPoints>true</useHitPoints>
        <defaultPlacingRot>South</defaultPlacingRot>
        <blocksAltitudes>
            <li>FloorCoverings</li>
        </blocksAltitudes>         		
        <building>
            <isEdifice>false</isEdifice>
        </building>
        <comps>
            <li>
                <compClass>CompQuality</compClass>
            </li>
        </comps>      
    </ThingDef>
    
    <ThingDef ParentName="GW_IF_RugBase"> <!--all stats are based on vanilla rug of same size-->
        <defName>GW_IF_4x4MundaneRug</defName>
        <label>imperial rug (4x4)</label>
        <description>It's a rug.</description>
        <graphicData>
            <graphicClass>Graphic_Single</graphicClass>
            <texPath>Furniture/Rugs/Rug4x4</texPath>
            <drawSize>(4, 4)</drawSize>
        </graphicData>
		<uiIconPath>Furniture/Rugs/Rug4x4</uiIconPath>
		<researchPrerequisites>
			<li>GW_IF_CommonStuff</li>
			<li>CarpetMaking</li>
        </researchPrerequisites>     
        <costStuffCount>150</costStuffCount>
        <size>(4,4)</size>
        <statBases>
            <Beauty>10</Beauty>
            <WorkToBuild>2000</WorkToBuild>
            <Mass>150</Mass>
        </statBases>
    </ThingDef>

